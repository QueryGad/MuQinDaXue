<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="23dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingBottom="8dp">
    <ImageView
        android:id="@+id/iv_unityitem"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_unityitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"
        android:layout_toRightOf="@id/iv_unityitem"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_unityitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_unityitem_name"
        android:layout_toRightOf="@id/iv_unityitem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        android:text="时间戳"/>
    <TextView
        android:id="@+id/tv_unityitem_cirle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲子教育"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:textColor="@color/main_text_color"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自 : "
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/tv_unityitem_cirle"/>
    <TextView
        android:id="@+id/tv_unityitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="18dp"
        android:text="标题"
        android:layout_below="@id/tv_unityitem_date"/>
    <TextView
        android:id="@+id/tv_unityitem_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_unityitem_title"
        android:maxLines="5"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="详情"
        />
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/ng_nuity"
        android:layout_below="@id/tv_unityitem_desc"
        android:layout_marginTop="8dp"
        app:ngv_gridSpacing="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_unityitem_commentnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:layout_below="@id/ng_nuity"
        android:layout_marginTop="11dp"
        android:text="评论数"/>
    <ImageView
        android:id="@+id/iv_unityitem_commentnum"
        android:layout_width="19dp"
        android:layout_height="15dp"
        android:layout_marginTop="11dp"
        android:layout_below="@id/ng_nuity"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/tv_unityitem_commentnum"
        />
    <TextView
        android:id="@+id/tv_unityitem_recordnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_below="@id/ng_nuity"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@id/iv_unityitem_commentnum"
        android:text="观看数"/>
    <ImageView
        android:layout_width="19dp"
        android:layout_height="15dp"
        android:layout_marginTop="11dp"
        android:layout_below="@id/ng_nuity"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/tv_unityitem_recordnum"
        />
</RelativeLayout>
